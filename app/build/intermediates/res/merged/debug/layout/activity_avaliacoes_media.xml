<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_avaliacoes_media"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.projetofinal.foodtracker.activity.AvaliacoesMediaActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_media_comida"
        android:textSize="24sp"
        android:layout_above="@+id/lbl_media_ambiente"
        android:layout_alignStart="@+id/lbl_media_atendimento"
        android:layout_marginBottom="38dp" />

    <TextView
        android:text="@string/lbl_media_cozinha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:id="@+id/lbl_media_cozinha"
        android:textSize="24sp"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/lbl_media_atendimento"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_media_atendimento"
        android:textSize="24sp"
        android:layout_above="@+id/lbl_media_comida"
        android:layout_alignStart="@+id/lbl_media_cozinha"
        android:layout_marginBottom="32dp" />

    <TextView
        android:text="Média das avaliações"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_media_ambiente"
        android:textSize="24sp"
        android:layout_marginBottom="186dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/lbl_media_comida" />
</RelativeLayout>
